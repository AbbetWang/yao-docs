{
  "name": "宠物",
  "action": {
    "bind": { "model": "pet", "option": {} }
  },
  "fields": {
    "form": {
      "ID": {
        "bind": "id",
        "edit": {
          "props": { "disabled": true, "placeholder": "请输入 ID" },
          "type": "InputNumber"
        }
      },
      "入院时间": {
        "bind": "stay",
        "edit": {
          "props": { "placeholder": "请输入 入院时间" },
          "type": "InputNumber"
        }
      },
      "入院状态": {
        "bind": "status",
        "edit": {
          "props": {
            "options": [
              { "label": "checked", "value": "checked" },
              { "label": "curing", "value": "curing" },
              { "label": "cured", "value": "cured" }
            ],
            "placeholder": "请选择 入院状态"
          },
          "type": "Select"
        }
      },
      "创建时间": {
        "bind": "created_at",
        "edit": {
          "props": {
            "placeholder": "请选择 创建时间",
            "showTime": { "format": "HH:mm:ss" }
          },
          "type": "DatePicker"
        }
      },
      "是否在线": {
        "bind": "online",
        "edit": {
          "props": {
            "options": [
              { "label": "开启", "value": true },
              { "label": "关闭", "value": false }
            ]
          },
          "type": "RadioGroup"
        }
      },
      "昵称": {
        "bind": "name",
        "edit": { "props": { "placeholder": "请输入 昵称" }, "type": "Input" },
        "view": { "props": {}, "type": "" }
      },
      "更新时间": {
        "bind": "updated_at",
        "edit": {
          "props": {
            "placeholder": "请选择 更新时间",
            "showTime": { "format": "HH:mm:ss" }
          },
          "type": "DatePicker"
        }
      },
      "治疗状态": {
        "bind": "curing_status",
        "edit": {
          "props": {
            "options": [
              { "label": "0", "value": "0" },
              { "label": "1", "value": "1" },
              { "label": "2", "value": "2" }
            ],
            "placeholder": "请选择 治疗状态"
          },
          "type": "Select"
        }
      },
      "状态": {
        "bind": "mode",
        "edit": {
          "props": {
            "options": [
              { "label": "开启", "value": "enabled" },
              { "label": "关闭", "value": "disabled" }
            ],
            "placeholder": "请选择 状态"
          },
          "type": "Select"
        }
      },
      "相关图片": {
        "bind": "images",
        "edit": {
          "props": {
            "autoSize": { "maxRows": 6, "minRows": 2 },
            "placeholder": "请输入 相关图片"
          },
          "type": "TextArea"
        },
        "view": { "props": {}, "type": "" }
      },
      "类型": {
        "bind": "type",
        "edit": {
          "props": {
            "options": [
              { "label": "cat", "value": "cat" },
              { "label": "dog", "value": "dog" },
              { "label": "others", "value": "others" }
            ],
            "placeholder": "请选择 类型"
          },
          "type": "Select"
        }
      },
      "花费": {
        "bind": "cost",
        "edit": {
          "props": { "placeholder": "请输入 花费" },
          "type": "InputNumber"
        }
      }
    }
  },
  "layout": {
    "form": {
      "sections": [
        {
          "columns": [
            { "name": "ID", "width": 12 },
            { "name": "昵称", "width": 12 },
            { "name": "类型", "width": 12 },
            { "name": "入院状态", "width": 12 },
            { "name": "状态", "width": 12 },
            { "name": "是否在线", "width": 12 },
            { "name": "治疗状态", "width": 12 },
            { "name": "入院时间", "width": 12 },
            { "name": "花费", "width": 12 },
            { "name": "相关图片", "width": 24 },
            { "name": "创建时间", "width": 12 },
            { "name": "更新时间", "width": 12 }
          ]
        }
      ]
    },
    "operation": {
      "actions": [
        {
          "action": { "Form.delete": { "model": "pet" } },
          "confirm": {
            "desc": "请确认删除，删除后数据无法恢复",
            "title": "确认"
          },
          "icon": "icon-trash-2",
          "style": "danger",
          "title": "Delete"
        }
      ],
      "preset": { "back": {}, "save": {} }
    },
    "primary": "id"
  }
}
