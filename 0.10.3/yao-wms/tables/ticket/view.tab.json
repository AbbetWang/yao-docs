{
  "name": "凭据",
  "action": {
    "bind": {
      "model": "ticket",
      "option": {
        "withs": {
          "user": {
            "query": {
              "select": ["id", "name", "photo", "supplier_id"],
              "withs": { "supplier": {} }
            }
          },
          "plan": { "query": { "select": ["id", "name"] } },
          "warehouse": {
            "query": { "select": ["id", "name", "dept", "photo"] }
          },
          "sku": {
            "query": {
              "select": ["id", "specs"],
              "withs": {
                "material": { "query": { "select": ["name", "id"] } }
              }
            }
          }
        }
      }
    },
    "after:find": "scripts.ticket.AfterFindView"
  }
}
