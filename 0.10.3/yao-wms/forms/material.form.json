{
  "action": { "bind": { "model": "material" } },

  "layout": {
    "actions": [
      {
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "name": "Submit",
            "type": "Form.submit",
            "payload": {}
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "action": [
          {
            "name": "Delete",
            "payload": {
              "model": "material"
            },
            "type": "Form.delete"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "confirm": {
          "desc": "请确认删除，删除后数据无法恢复",
          "title": "确认"
        },
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete"
      }
    ],
    "form": {
      "sections": [
        {
          "title": "Section 1",
          "columns": [
            { "name": "名称", "width": 12 },
            { "name": "厂商", "width": 6 },
            { "name": "类目", "width": 6 }
          ]
        },
        {
          "title": "Section 2",
          "columns": [
            { "name": "图表", "width": 24 },
            { "name": "图片", "width": 24 },
            { "name": "介绍", "width": 24 }
          ]
        }
      ]
    }
  }
}
